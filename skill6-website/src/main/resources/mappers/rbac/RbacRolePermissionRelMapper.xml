	<resultMap id="BaseResultMap" type="RbacRolePermissionRel">
		<constructor>
			<idArg column="role_id" javaType="java.lang.Long" jdbcType="BIGINT" />
			<idArg column="permission_id" javaType="java.lang.Long" jdbcType="BIGINT" />
		</constructor>
